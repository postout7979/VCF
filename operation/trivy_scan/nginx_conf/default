## 기본 Nginx 설치 상태일 경우, /etc/nginx/sites-available/default 수정
## https 접속 시, 인증서 사용 및 경로 수정

server {
    listen 80;
    server_name apisec.vcf.local 10.200.10.11;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name apisec.vcf.local 10.200.10.11;

    ssl_certificate      /etc/nginx/cert/server.crt;
    ssl_certificate_key /etc/nginx/cert/server.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    access_log /var/log/nginx/apisec_access.log;
    error_log  /var/log/nginx/apisec_error.log;

    # [핵심] 1. Web 대시보드 요청 (/web) -> Python 서버로 프록시
    location /web {
        proxy_pass http://127.0.0.1:8000/web;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    # 2. 그 외 루트 경로는 Nginx 기본 정적 파일 (선택 사항)
    location / {
        root /var/www/html;
        index index.html index.htm;
        try_files $uri $uri/ =404;
    }
}
